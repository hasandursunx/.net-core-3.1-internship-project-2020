@model IEnumerable<Parent>
@{
    ViewData["Title"] = "AllParents";
}
<div class="container-fluid  bg-light p-3">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-danger btn-sm" asp-controller="parents" asp-action="create">
                Kayıt Ekle
            </a>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 ">
            <div class="table-responsive p-3 ">

                <table id="datatables" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th> VASİYE GİT </th>
                            <th> DOSYA TUR </th>
                            <th> TC </th>
                            <th> ADI SOYADI </th>
                            <th> TELEFON </th>
                            <th> İL </th>
                            <th> İLÇE </th>
                            <th> ADRES </th>
                            <th> IBAN </th>
                            <th> EV DURUMU </th>
                            <th> KİRA MİKTARI </th>
                            <th> MAAŞ </th>
                            <th> MAAŞ MİKTARI </th>
                            <th> BAKILAN ÇOCUK SAYISI </th>
                            <th> KAYIT TARİHİ </th>
                            <th> GÜNCELLEME TARİHİ </th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Vasi_Dosya == "Dosya1")
                            {

                            }
                            <tr>
                                <th><a class="btn btn-success" asp-controller="Parents" asp-action="Profile" asp-route-id="@item.Vasi_Id"> GİT </a></th>
                                <th>@item.Vasi_Dosya</th>
                                <th>@item.Vasi_Tc</th>
                                <th>@item.Vasi_AdiSoyadi</th>
                                <th>@item.Vasi_Telefon</th>
                                <th>@item.Vasi_Il</th>
                                <th>@item.Vasi_Ilce</th>
                                <th>@item.Vasi_Adres</th>
                                <th>@item.Vasi_Iban</th>
                                <th>@item.Vasi_Evdurumu</th>
                                <th>@item.Vasi_Kiramiktari</th>
                                <th>@item.Vasi_Maas</th>
                                <th>@item.Vasi_Maasmiktari</th>
                                <th>@item.Vasi_Cocuksayisi</th>
                                <th>@item.Vasi_Kayittarihi.ToShortDateString()</th>
                                <th>@item.Vasi_Guncellemetarihi.ToShortDateString()</th>


                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th> VASİYE GİT </th>
                            <th> DOSYA TUR </th>
                            <th> TC </th>
                            <th> ADI SOYADI </th>
                            <th> TELEFON </th>
                            <th> İL </th>
                            <th> İLÇE </th>
                            <th> ADRES </th>
                            <th> IBAN </th>
                            <th> EV DURUMU </th>
                            <th> KİRA MİKTARI </th>
                            <th> MAAŞ </th>
                            <th> MAAŞ MİKTARI </th>
                            <th> BAKILAN ÇOCUK SAYISI </th>
                            <th> KAYIT TARİHİ </th>
                            <th> GÜNCELLEME TARİHİ </th>

                        </tr>
                    </tfoot>
                </table>

            </div>

        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript" class="init">

        $(document).ready(function () {
            $('#datatables').DataTable();
        });

    </script>
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
}

